<div class="mb-5 pt-3">
    <a href="/dashboard/create/"><button id="create-article" class="button is-primary is-pulled-right">create article</button></a>

    <h2 class="title pb-4">dashboard: your articles</h2>
    <hr>
    {{#if posts.length}}
</div>

{{#each articles as |article|}}
{{> article-info article}}

<a href="/dashboard/edit/{{article.id}}"><button class="button mb-5 ml-5 is-warning">edit article</button></a>
</div>
{{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">you do not currently have any articles</h6>

{{/if}}